@model PruebaTecnica.Models.Libro


<link rel="stylesheet" href="~/css/estilos.css">
<div class="container">
    <h2>Agregar Nuevo Libro</h2>

    @using (Html.BeginForm("AgregarLibro", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="Titulo">Título:</label>
            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", placeholder = "Ingrese el título del libro" })
            @Html.ValidationMessageFor(m => m.Titulo)
        </div>

        <div class="form-group">
            <label for="AutorID">Autor:</label>
            <div class="dropdown">
                <select asp-for="autorId" asp-items="@(ViewBag.Autores as SelectList)" class="form-control">
                    <option value="">Seleccione un autor</option>
                </select>
                @Html.ValidationMessageFor(m => m.autorId)
            </div>
        </div>

        <button type="submit" class="btn btn-outline-primary w-100 mr-20">Guardar</button>
    }
</div>


